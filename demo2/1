Simple Backbone model compared to a Web Component Model


var Todo = Backbone.Model.extend({
  // Default todo attribute values
  defaults: {
    title: '',
    completed: false
  }
});

var todo1 = new Todo();
var completed = todo1.get('completed');
todo1.set('title', 'Hello');



var Todo = xtag.register('app-todo', {
  accessors: {
    title: {
      attribute: {}
    },
    completed: {
      attribute: {},
      get: function(){
        return (this.getAttribute('completed') == "true");
      }
    },
    date: {
      set: function(value){
        this.xtag.data.date = value;
      },
      get: function(){
        return this.xtag.data.date;
      }
    }
  }
});


var todo2 = document.createElement('app-todo');

var todo = new Todo();   // this is an html element
todo.title = 'Hello';
todo.setAttribute('completed', true);



// throw it into the DOM, but it doesn't have a visual representation yet
body.appendChild(todo);

<body>
  <app-todo title="Hello" completed="true"></app-todo>
</body>




